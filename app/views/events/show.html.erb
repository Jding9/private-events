<h1>This is the Event</h1>

<p>Name of the event: <%= @event.event_name %></p>
<p>Date of the event: <%= @event.event_date %></p>
<p>Creator of the event: <%= @event.creator.name %></p>

<h2>Attendees</h2>
<% @event.attendees.each do |attendee| %>
    <ul>
        <%= attendee.name %>
    </ul>
<% end %>

<% if !@event.attendees.include?(current_user) %>
    <h2>Attend this event?</h2>
    <%= button_to 'Attend', attend_event_path(@event.id) %>
<% elsif @event.attendees.include?(current_user) %>
    <p>You have registered to attend this event.</p>
<% end %>